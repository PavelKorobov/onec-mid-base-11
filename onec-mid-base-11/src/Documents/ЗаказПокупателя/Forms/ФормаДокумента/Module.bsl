&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	
	//{{ Коробов П.В. Домашнее задание к занятию "Командная работа (EDT)"

	// Исходный код
	// КоэффициентСкидки = 1 - ТекущиеДанные.Скидка / 100;
	// ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
	// Конец Исходный код
	
	Сумма = ТекущиеДанные.Количество * ТекущиеДанные.Цена;
	СуммаСкидок = Объект.Git_СогласованнаяСкидка + ТекущиеДанные.Скидка;
	
	Если СуммаСкидок > 100 Тогда
		
		ВидНоменклатурыТовар = Git_ПолучитьВидНоменклатуры(ТекущиеДанные.Номенклатура);
		
		Если ВидНоменклатурыТовар Тогда	
			ИмяТабличнойЧасти = "Объект.Товары";
		Иначе
			ИмяТабличнойЧасти = "Объект.Услуги";
		КонецЕсли;
		
		Git_СообщениеОПревышенииСкидки(ИмяТабличнойЧасти, ТекущиеДанные);
		
		ТекущиеДанные.Сумма = 0;
		Возврат;
		
	КонецЕсли;
	
	Скидка = Сумма * (СуммаСкидок / 100);
	ТекущиеДанные.Сумма = Сумма - Скидка;
	//}} Коробов П.В. Домашнее задание к занятию "Командная работа (EDT)"
	
КонецПроцедуры

&НаСервереБезКонтекста
Функция Git_ПолучитьВидНоменклатуры(Номенклатура)
	//{{ Коробов П.В. Домашнее задание к занятию "Командная работа (EDT)"
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	Номенклатура.ВидНоменклатуры КАК ВидНоменклатуры
	|ИЗ
	|	Справочник.Номенклатура КАК Номенклатура
	|ГДЕ
	|	Номенклатура.Ссылка = &Номенклатура";
	
	Запрос.УстановитьПараметр("Номенклатура", Номенклатура);
	
	Выборка = Запрос.Выполнить().Выбрать();
	
	Выборка.Следующий();
	
	Если Выборка.ВидНоменклатуры = Перечисления.ВидыНоменклатуры.Товар Тогда
		
		Возврат Истина;
		
	КонецЕсли;
	
	Возврат Ложь;
	//}} Коробов П.В. Домашнее задание к занятию "Командная работа (EDT)"
		
КонецФункции

&НаКлиенте
Процедура Git_СообщениеОПревышенииСкидки(ИмяТабличнойЧасти, ТекущиеДанные)
	
	//{{ Коробов П.В. Домашнее задание к занятию "Командная работа (EDT)"
	ТекстСообщения = СтрШаблон("Скидка на %1 не должна превышать 100 процентов", ТекущиеДанные.Номенклатура);
	ИндексСтроки = ТекущиеДанные.НомерСтроки - 1;
	ИмяПоля = СтрШаблон("%1[%2].Скидка", ИмяТабличнойЧасти, ИндексСтроки);
	
	Сообщение = Новый СообщениеПользователю;
	
	Сообщение.Текст = ТекстСообщения;
	Сообщение.Поле = ИмяПоля;
	Сообщение.Сообщить();	
	//}} Коробов П.В. Домашнее задание к занятию "Командная работа (EDT)"
	
КонецПроцедуры

